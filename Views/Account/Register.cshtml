@model RS2.Models.user

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_OnlyLogo.cshtml";
}

<br /><br />
    <div class="jumbotron">
    @using (Html.BeginForm(new Dictionary<string,Object>()
        {
            {"class","form-inline"},
            {"role","form"}
        }))
        {   
            <div class="form-group">
                <label class="sr-only" for="exampleInputEmail2">Email</label>
                @Html.TextBoxFor(model => model.username, new Dictionary<string, Object>()
                                                            {
                                                                {"class","form-control"},
                                                                {"placeholder","Enter email"}
                                                            })
             </div>
             <div class="form-group">
                <label class="sr-only" for="exampleInputPassword2">Password</label>
                @Html.TextBoxFor(model => model.password, new Dictionary<string, Object>()
                                                            {
                                                                {"class","form-control"},
                                                                {"placeholder","Enter password"},
                                                                {"type","password"}
                                                            })
            </div>
            <div class="form-group">
                <label class="sr-only" for="exampleInputPassword2">Nickname</label>
                @Html.TextBoxFor(model => model.nickname, new Dictionary<string, Object>()
                                                            {
                                                                {"class","form-control"},
                                                                {"placeholder","Enter nickname"}
                                                            })
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox"> Remember me
                </label>
            </div>
            <button type="submit" class="btn btn-default">Register</button><br /><br />
            @Html.ValidationMessageFor(model => model.username);
            @Html.ValidationMessageFor(model => model.password);
          
        }
    </div>
